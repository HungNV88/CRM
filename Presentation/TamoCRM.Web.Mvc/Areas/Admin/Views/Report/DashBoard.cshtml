                    $("#tblDashBoard").html(result);
                }
            })

            $('#btnSaveExcels').removeAttr('disabled');
        });
    });

    function SaveExcels() {

        $("#tblDashBoard").table2excel({
            name: "Excel Document Name",
            filename: "DashBoard",
            fileext: ".xls"
        });

        location.reload();
    };

</script>