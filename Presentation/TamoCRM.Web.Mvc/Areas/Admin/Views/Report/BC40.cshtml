@using TamoCRM.Core
@model TamoCRM.Web.Mvc.Areas.Admin.Models.Reports.BC40Model
@{
    ViewBag.Title = "Báo cáo nghiệm thu Hotline";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="breadcrumbs" id="breadcrumbs">
    <script type="text/javascript">
        try {
            ace.settings.check('breadcrumbs', 'fixed');
        } catch (e) { }
    </script>

    <ul class="breadcrumb">
        <li>
            <i class="icon-home home-icon"></i>
            <a href="#">Trang chủ</a>
        </li>

        <li>
            <a href="javascript:void(0);">Danh mục</a>
        </li>
        <li class="active">Báo cáo nghiệm thu Contact Hotline</li>
    </ul>
</div>

<div class="page-content">
    <div class="page-header">
        <h1>
            Báo cáo nghiệm thu Hotline
        </h1>
    </div>
    <!-- /.page-header -->
    <div class="row">
        <div class="form-group">
            <div class="col-sm-12" id="alert">
            </div>
        </div>
        <div class="col-xs-12">
            @using (Ajax.BeginForm("ShowBC40", "Report", new AjaxOptions { HttpMethod = "POST" }, new { enctype = "multipart/form-data", @class = "form-horizontal", role = "form", id = "uploadexcelform" }))
            {
                @Html.AntiForgeryToken()
                <div class="form-group">
                    <label class="col-sm-1 control-label no-padding-right" style="text-align:left !important;" for="form-field-2">Từ Ngày </label>
                    <div class="col-sm-2">
                        @Html.TextBox("FromDate", string.Empty, new { @required = "", @pattern = "\\d{2}/\\d{2}/\\d{4})", error = "Từ ngày rỗng hoặc không đúng định dạng" })
                    </div>
                    <label class="col-sm-1 control-label no-padding-right" style="text-align:left !important;" for="form-field-2">Đến Ngày </label>
                    <div class="col-sm-2">
                        @Html.TextBox("ToDate", string.Empty, new { @required = "", @pattern = "\\d{2}/\\d{2}/\\d{4})", error = "Đến ngày rỗng hoặc không đúng định dạng" })
                    </div>
                </div>

                <div class="space-4"></div>
                <div class="form-group">
                    <div class="col-sm-5">
                        <button type="button" class="btn-import btn-primary" id="btnReport" style="margin-right: 5px;">Xuất báo cáo</button>
                        <button type="button" class="btn-import btn-primary" id="btnSave">Tải về</button>
                    </div>
                    <div class="col-sm-7">

                    </div>
                </div>
            }

            <div class="space-6"></div>
            <div id="mydiv">
                <iframe id="frame" style="width: 100%; height: 400px; border: none;"></iframe>
            </div>

            <!-- PAGE CONTENT ENDS -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</div>
<!-- /.page-content -->
<script type="text/javascript">
    $(document).ready(function () {
        $("#FromDate").datepicker({ format: 'dd/mm/yyyy', autoclose: true });
        $("#ToDate").datepicker({ format: 'dd/mm/yyyy', autoclose: true });
        $("#btnReport").click(function (e) {
            e.preventDefault();
            if ($("#FromDate").val() == '' || $("#ToDate").val() == '') {
                alertError("Bạn chưa chọn khoảng thời gian tìm kiếm");
                return;
            }
            var url = '/admin/report/ShowBC40?from=' + $("#FromDate").val() + '&to=' + $("#ToDate").val() + '&reporttype=' + '@((int)ReportType.Pdf)';
            $("#frame").attr("src", url);
        });

        $("#btnSave").click(function (e) {
            e.preventDefault();
            if ($("#FromDate").val() == '') {
                alertError("Bạn chưa chọn khoảng thời gian tìm kiếm");
                return;
            }
            var url = '/admin/report/ShowBC40?from=' + $("#FromDate").val() + '&to=' + $("#ToDate").val() + '&reporttype=' + '@((int)ReportType.Excel)';
            $("#frame").attr("src", url);
        });
    });
</script>
